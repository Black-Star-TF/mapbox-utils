		"prettier": "^3.3.2",
		"rollup": "^4.18.0",
		"rollup-plugin-postcss": "^4.0.2",
		"rollup-plugin-typescript2": "^0.36.0",
		"typescript": "^5.5.3"
	},
	"lint-staged": {
		"*.{js,ts}": [
			"eslint --fix",
			"prettier --write"
